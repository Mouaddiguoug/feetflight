# ENVIRONMENT CONFIGURATION
# Environment Loading (Bun):
# Bun automatically loads .env files in the following order:
#   1. .env.${NODE_ENV}.local (e.g., .env.development.local)
#   2. .env.local
#   3. .env.${NODE_ENV} (e.g., .env.development)
#   4. .env
#
# ============================================

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# [REQUIRED] Server Port
# Validation: Must be a valid port number (numeric string)
# Example: 3000
PORT=3000

# [REQUIRED] Node Environment
# Validation: Must be 'development', 'production', or 'test'
# Example: development
NODE_ENV=development

# [OPTIONAL] Application Domain (used for email verification links)
# Validation: String (any valid URL)
# Example: http://localhost:3000
DOMAIN=http://localhost:3000

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# [REQUIRED] JWT Secret Key for access tokens (15 minute expiry)
# Validation: Must be at least 32 characters for security
# IMPORTANT: Use a strong, random secret in production
# Example: Use `openssl rand -base64 32` to generate
SECRET_KEY=your_secret_key_here

# [OPTIONAL] JWT Refresh Secret (30 day expiry)
# Validation: String (any length)
# Default: Falls back to SECRET_KEY if not set
# Recommended: Use a different secret for enhanced security
# Example: Use `openssl rand -base64 32` to generate
REFRESH_SECRET=your_refresh_secret_here

# [OPTIONAL] Email Verification Secret
# Validation: String (any length)
# Default: Falls back to SECRET_KEY if not set
# Used for email verification tokens (48 hour expiry)
# IMPORTANT: Use a different secret from SECRET_KEY for security separation
# This prevents verification tokens from being used as access tokens
# Example: Use `openssl rand -base64 32` to generate
EMAIL_SECRET=your_email_secret_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# [REQUIRED] Neo4j Database URI
# Validation: Must start with 'bolt://' or 'neo4j://'
# Example: bolt://localhost:7687
NEO4J_URI=bolt://localhost:7687

# [REQUIRED] Neo4j Database Username
# Validation: String (any value)
# Example: neo4j
NEO4J_USERNAME=neo4j

# [REQUIRED] Neo4j Database Password
# Validation: String (any value)
# Example: your_neo4j_password
NEO4J_PASSWORD=your_neo4j_password

# ============================================
# EMAIL DELIVERY (RESEND)
# ============================================

# [REQUIRED] Resend API Key
# Validation: Must start with 're_'
# Get your API key from: https://resend.com/api-keys
# Example: re_123abc456def
RESEND_API_KEY=re_your_api_key_here

# [REQUIRED] Resend From Email Address
# Validation: Must be a valid email address (format validation)
# Must be a verified domain in your Resend dashboard
# Format: "Your App Name <onboarding@yourdomain.com>"
# Example: Feetflight <onboarding@yourdomain.com>
RESEND_FROM_EMAIL=Feetflight <onboarding@yourdomain.com>

# ============================================
# EMAIL DELIVERY (NODEMAILER - DEPRECATED)
# ============================================
# These variables are deprecated and will be removed after migration
# Kept temporarily for backward compatibility

# Nodemailer User Email (deprecated - use RESEND_FROM_EMAIL)
USER_EMAIL=your_email@gmail.com

# Nodemailer Email Service (deprecated - use Resend)
SERVICE=gmail

# Nodemailer Password (deprecated - use RESEND_API_KEY)
PASS=your_email_password

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================

# [REQUIRED] Stripe API Key (Test Key for development)
# Validation: Must start with 'sk_test_' or 'sk_live_'
# Get your API keys from: https://dashboard.stripe.com/apikeys
# Example: sk_test_51abc123...
STRIPE_TEST_KEY=sk_test_your_stripe_test_key

# Stripe Secret Key (Production)
# STRIPE_SECRET_KEY=sk_live_your_stripe_live_key

# [OPTIONAL] Stripe Webhook Secret
# Validation: String (any value, but typically starts with 'whsec_')
# Get from Stripe Dashboard → Developers → Webhooks
# Used to verify webhook signatures for secure payment processing
# IMPORTANT: Required for webhook verification in production
# Example: whsec_abc123def456
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# LOGGING
# ============================================

# [OPTIONAL] Log Format
# Validation: String (any value)
# Common values: dev, combined, common, short, tiny
# Example: dev
LOG_FORMAT=dev

# [OPTIONAL] Log Directory (relative or absolute path)
# Validation: String (any valid path)
# Example: ../logs
LOG_DIR=../logs

# [OPTIONAL] Log Level
# Validation: Must be 'error', 'warn', 'info', 'debug', or 'trace'
# Default: 'info'
# Example: info
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION
# ============================================

# [OPTIONAL] Allowed Origins (comma-separated for multiple origins, or * for all)
# Validation: String (any value)
# Default: '*'
# Example: * or http://localhost:3000,https://example.com
ORIGIN=*

# [OPTIONAL] Allow Credentials (true/false)
# Validation: Must be 'true' or 'false' (string, not boolean)
# Default: 'false'
# Example: true
CREDENTIALS=true

# ============================================
# ADDITIONAL SERVICES
# ============================================

# [OPTIONAL] OpenAI API Key (for AI picture generation)
# Validation: String (any value, typically starts with 'sk-')
# Get from: https://platform.openai.com/api-keys
# Used for generating AI-based feet pictures
# Example: sk-proj-abc123...
OPENAI_API_KEY=sk-your_openai_api_key_here

# [OPTIONAL] Firebase Project ID (for push notifications and Firestore)
# Validation: String (any value)
# Get from Firebase Console → Project Settings
# Used for FCM push notifications and chat message storage
# Example: your-project-id-12345
projectId=your_firebase_project_id

# Firebase Admin SDK (additional config if needed)
# FIREBASE_CLIENT_EMAIL=your_firebase_client_email
# FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Vonage/Nexmo (if used for SMS)
# VONAGE_API_KEY=your_vonage_api_key
# VONAGE_API_SECRET=your_vonage_api_secret

# AWS Configuration (if used)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
