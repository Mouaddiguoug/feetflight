{
  "name": "@feetflight/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "FeetFlight API - Elysia Backend",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun --watch src/server.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
    "build:cluster": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
    "build:single": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/server.ts",
    "build:js": "bun build --minify-whitespace --minify-syntax --target bun --outfile dist/index.js src/index.ts",
    "start": "cross-env NODE_ENV=production dist/server",
    "start:js": "cross-env NODE_ENV=production bun dist/index.js",
    "test": "bun --bun jest --forceExit --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/static": "^1.4.6",
    "@feetflight/shared-types": "workspace:*",
    "@feetflight/shared-utils": "workspace:*",
    "@labzzhq/compressor": "^1.1.1",
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "@vonage/server-sdk": "^3.25.1",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "crypto": "^1.0.1",
    "elysia": "^1.4.16",
    "elysia-helmet": "^3.0.0",
    "fcm": "^1.0.3",
    "firebase-admin": "^13.6.0",
    "handlebars": "^4.7.8",
    "moment": "^2.30.1",
    "neo4j-driver": "^6.0.1",
    "openai": "^6.9.0",
    "otp-generator": "^4.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native-progress-steps": "^2.0.3",
    "resend": "^6.4.2",
    "stripe": "^19.3.1",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@feetflight/eslint-config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "^1.3.2",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.3",
    "@types/otp-generator": "^4.0.2",
    "bun-types": "v1.3.2",
    "jest": "^30.2.0"
  },
  "trustedDependencies": [
    "aws-sdk",
    "bcrypt",
    "protobufjs"
  ]
}
