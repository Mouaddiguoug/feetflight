{
  "name": "@feetflight/workspace",
  "version": "0.0.1",
  "private": true,
  "description": "FeetFlight Nx Monorepo - TypeScript + Elysia API Server",
  "author": "",
  "license": "ISC",
  "packageManager": "bun@1.x",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --projects=api,web --parallel",
    "dev:api": "nx dev api",
    "dev:web": "nx dev web",
    "build": "nx run-many --target=build --all",
    "build:api": "nx build api",
    "build:api:js": "nx build:js api",
    "build:web": "nx build web",
    "start": "nx run-many --target=start --all --parallel",
    "start:api": "nx start api",
    "test": "nx run-many --target=test --all",
    "test:api": "nx test api",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "lint:api": "nx lint api",
    "lint:web": "nx lint web",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck:web": "nx typecheck web",
    "preview:web": "nx preview web",
    "clean": "nx reset && node scripts/clean.mjs all",
    "clean:cache": "nx reset && node scripts/clean.mjs cache",
    "clean:dist": "node scripts/clean.mjs dist",
    "clean:modules": "node scripts/clean.mjs modules",
    "deploy:prod": "nx deploy:prod api",
    "deploy:dev": "nx deploy:dev api",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1"
  },
  "devDependencies": {
    "@nx/eslint": "^22.0.3",
    "@nx/js": "^22.0.3",
    "@types/bun": "^1.3.2",
    "@types/glob": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "bun-types": "latest",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nx": "latest",
    "prettier": "^3.6.2"
  },
  "trustedDependencies": [
    "@firebase/util",
    "esbuild",
    "nx",
    "unrs-resolver"
  ]
}
